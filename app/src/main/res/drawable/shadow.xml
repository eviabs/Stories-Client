<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dip"
        android:left="0dip"
        android:right="0dip"
        android:top="0dip">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorGray"
                android:endColor="#1000"
                android:type="linear"
                android:angle="270"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
        </shape>
    </item>

    <item
        android:bottom="20dip">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff">
            </gradient>
        </shape>
    </item>
</layer-list>